<div class="results-block">
    <%= bootstrap_flash %>
</div>
<div id="results">
    <% if @stock.present? %>
        <div class="well results-block">
            <strong>Symbol: </strong> <%= @stock.ticker %>
            <strong>Name: </strong> <%= @stock.name %>
            <strong>Price: </strong> <%= @stock.last_price %>
        </div>
         <%= link_to "Add to my stock", user_stocks_path(user: current_user, stock_ticker:@stock.ticker ), method: :post, class: "btn btn-xs btn-success" %> 
    <% end %>
 </div>